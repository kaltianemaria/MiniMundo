@model MiniMundo.Models.Venda

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Venda</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2>Editar Venda</h2>
        <form asp-action="Editar">
            <input type="hidden" asp-for="VendaId" />
            <div class="form-group">
                <label for="ProdutoId">ID do Produto:</label>
                <input type="number" class="form-control" id="ProdutoId" name="ProdutoId" value="@Model.ProdutoId" required>
            </div>
            <div class="form-group">
                <label for="ClienteId">ID do Cliente:</label>
                <input type="number" class="form-control" id="ClienteId" name="ClienteId" value="@Model.ClienteId" required>
            </div>
            <div class="form-group">
                <label for="NomeDoFuncionario">Nome do Funcionário:</label>
                <input type="text" class="form-control" id="NomeDoFuncionario" name="NomeDoFuncionario" value="@Model.NomeDoFuncionario" required>
            </div>
            <div class="form-group">
                <label for="Preco">Preço:</label>
                <input type="text" class="form-control" id="Preco" name="Preco" value="@Model.Preco" required>
            </div>
            <div class="form-group">
                <label for="DataDaVenda">Data da Venda:</label>
                <input type="date" class="form-control" id="DataDaVenda" name="DataDaVenda" value="@Model.DataDaVenda" required>
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>

</body>
</html>
