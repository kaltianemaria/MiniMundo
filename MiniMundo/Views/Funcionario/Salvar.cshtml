@model MiniMundo.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar";
}

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center">Cadastro</h2>
            </div>
            <div class="card-body">
                <form asp-action="Cadastrar">
                    <div class="form-group">
                        <label asp-for="TipoCadastro">Tipo de Cadastro:</label>
                        <select asp-for="TipoCadastro" class="form-control" required>
                            <option value="administrador">Administrador</option>
                            <option value="colaborador">Colaborador</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome">Nome:</label>
                        <input asp-for="Nome" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Matricula">Matrícula:</label>
                        <input asp-for="Matricula" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">E-mail:</label>
                        <input asp-for="Email" class="form-control" required>
                    </div>
                    <button type="submit" value="Cadastrar" class="btn btn-primary">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>