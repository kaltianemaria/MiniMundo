@model MiniMundo.Models.Cliente

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deletar Cliente</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2>Deletar Cliente</h2>
        <p>Você tem certeza que deseja deletar o cliente <strong>@Model.Nome</strong>?</p>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sim, Deletar</button>
            <a href="@Url.Action("ListarClientes", "Cliente")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

</body>
</html>
